<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up</title>
    <link rel="shortcut icon" href="/assets/favicon.png" type="image/x-icon">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/static/userSignup.css">
</head>
<body>
    <div class="container">
         <div class="form edts">
            <form action="/SignUp/Home" method="post">
                <center>
                    <div class="lgn form-header">
                      <h2 class="dec" style="margin-bottom: 20px;">Sign Up</h2>
                      <h6 class="dec">Sign up and explore our exciting features</h6>
                    </div>
                     <div class="alert-content">
                            <% if(locals.alert){%>
                              <div id="alert" class=" alert border-0 alert-warning"><%=locals.alert%></div>
                              <%}%>
                     </div>
                   </center>
                   <div class="cont">
                   <div class="mb-3 ">
                    <label class="form-label dec">Username</label>
                    <input type="username" class="form-control" id="username" aria-describedby="emailHelp" name="username" required>
                  </div>
                      <div class="mb-3 ">
                        <label class="form-label dec">Email address</label>
                        <input type="email" class="form-control" id="email" aria-describedby="emailHelp" name="email" required>
                      </div>
                      <div class="mb-3">
                        <label class="form-label dec ">Password</label>
                        <input type="password" class="form-control" id="password" name="password" required>
                        <div id="passwordHelpBlock" class="form-text">
                            Use a valid email and a strong password.
                          </div>
                      </div>
                 <hr class="line">
                 <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left-short" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M12 8a.5.5 0 0 1-.5.5H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5a.5.5 0 0 1 .5.5z"/>
                  </svg><a href="/" class="back">Back to Login Page</a>
                 <center><button type="submit" class="btn btn-success" onclick="return validation()">Sign Up</button></center>
                </div>
            </form>
            <a href="/SignUp/Home" class="btn-cont">Sign Up</a>
         </div>
    </div>
    <script>
      function validation(){
   let username = document.getElementById('username')
   let useremail = document.getElementById('email')
   let userpassword = document.getElementById('password')
   const emailPattern = /^[A-Za-z0-9._%-]+@[A-Za-z0-9.-]+\.[A-Za-z]{2,4}$/;
   if(username.value=="" && useremail.value=="" && userpassword.value==""){
            alert("Please fill all the fields")
              return false
            }
            else if(username.value=="" ){
              alert("Please fill username input")
            return false
          }
            else if(useremail.value==""){
              alert("Please fill email input")
              return false
            }
            else if(userpassword.value==""){
              alert("Please fill password input")
              return false
            }
            else if (userpassword.value.length <= 5 || userpassword.value.length >= 15) {
              alert("Length of password must be between 5 and 15 ");
        return false;
          } 
  
     else if (!emailPattern.test(useremail.value)) {
      alert("Email is not valid");
        return false;
      }
            else{
              return true;
            }
      }
      setTimeout(() => {
        let alert = document.getElementById('alert')
        alert.style.display = 'none'
      }, 1500);
    </script>
</body>
</html>